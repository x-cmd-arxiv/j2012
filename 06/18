 in variable vibration\nconditions.\n","versions":[{"version":"v1","created":"Sun, 17 Jun 2012 23:27:28 GMT"},{"version":"v2","created":"Tue, 18 Feb 2014 18:09:30 GMT"}],"update_date":"2014-02-19"}
