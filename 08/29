licit refinement of\nS4-provability.\n","versions":[{"version":"v1","created":"Wed, 29 Aug 2012 13:41:31 GMT"},{"version":"v2","created":"Fri, 30 Nov 2012 09:35:22 GMT"},{"version":"v3","created":"Wed, 29 May 2013 08:55:43 GMT"}],"update_date":"2014-01-23"}
