f the\nsupernova explosion.\n","versions":[{"version":"v1","created":"Tue, 21 Feb 2012 15:47:18 GMT"},{"version":"v2","created":"Tue, 28 Feb 2012 22:07:17 GMT"},{"version":"v3","created":"Thu, 31 May 2012 09:29:49 GMT"}],"update_date":"2015-06-04"}
