bodies that \"fools\" local rounding\nalgorithms.\n","versions":[{"version":"v1","created":"Wed, 18 Jul 2012 13:21:26 GMT"},{"version":"v2","created":"Tue, 4 Sep 2012 17:55:18 GMT"}],"update_date":"2015-03-20"}
