 fluid-gravity correspondence.\n","versions":[{"version":"v1","created":"Mon, 30 Jul 2012 15:04:44 GMT"},{"version":"v2","created":"Mon, 19 Nov 2012 15:23:00 GMT"},{"version":"v3","created":"Mon, 2 Jun 2014 14:06:39 GMT"}],"update_date":"2014-06-03"}
